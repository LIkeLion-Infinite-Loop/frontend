{
  "expo": {
    "name": "비우GO",
    "slug": "biugo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "biugo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/images/earth-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#05D16E"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.while.biugo",
      "infoPlist": {
        "NSCameraUsageDescription": "이 앱은 바코드 및 QR 코드 스캔을 위해 카메라 접근 권한이 필요합니다."
      }
    },
    "android": {
      "package": "com.while.biugo",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/earth-logo.png",
        "backgroundColor": "#05D16E"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-barcode-scanner"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
